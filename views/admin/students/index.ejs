                <i class="mdi mdi-readability"></i>
              </a>
            </li>
          </ul>
        </div>

        <div class="tab-content tabcontent-border">
          <div class="tab-pane active" id="all" role="tabpanel">
            <div class="table-responsive">
              <table
                id="zero_config"
                class="table table-striped table-bordered"
              >
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Firstname</th>
                    <th>Lastname</th>
                    <th>Level</th>
                  </tr>
                </thead>
                <tbody>
                  <% students.forEach(s => {%>
                  <tr>
                    <td><%=s.studentId %></td>
                    <td><%=s.firstname %></td>
                    <td><%=s.lastname %></td>
                    <td><%=s.level %></td>
                  </tr>
                  <%}); %>
                </tbody>
              </table>
            </div>
          </div>

          <div class="tab-pane" id="level4" role="tabpanel">
